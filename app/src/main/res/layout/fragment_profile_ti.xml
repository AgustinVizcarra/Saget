<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_principal"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:context=".ProfileFragmentUsuario">

        <TextView
            android:id="@+id/textViewPerfilTi"
            android:layout_width="172dp"
            android:layout_height="41dp"
            android:layout_marginTop="48dp"
            android:fontFamily= "@font/yrsa"
            android:text="MI PERFIL"
            android:textColor="#485BC3"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayoutPerfil"
            android:layout_width="245dp"
            android:layout_height="205dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPerfilTi">

            <ImageView
                android:id="@+id/imagenperfilTi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fondo_perfil"
                android:gravity="center"></ImageView>

        </LinearLayout>
        <ImageButton
            android:id="@+id/imageButtonPerfilTI"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_imagebutton_usuario"
            android:backgroundTint="#9CABC2"
            android:elevation="2dp"
            android:layout_marginTop="145dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_camera"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayoutPerfil"
            app:layout_constraintEnd_toEndOf="@+id/linearLayoutPerfil"
            app:layout_constraintStart_toStartOf="@+id/linearLayoutPerfil"
            app:layout_constraintTop_toTopOf="@+id/linearLayoutPerfil"></ImageButton>

        <LinearLayout
            android:id="@+id/linearLayout4PerfilTi"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutPerfil"
            app:layout_constraintVertical_bias="0.0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewNombrePerfTI"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginEnd="105dp"
                    android:text="Nombres"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextTextNamePerfilTi"
                    android:layout_width="320dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/textViewNombrePerfTI"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_input_usuario"
                    android:ems="12"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textViewApellidoPerfTi"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextTextNamePerfilTi"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="105dp"
                    android:text="Apellidos"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextTextApellPerfti"
                    android:layout_width="320dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/textViewApellidoPerfTi"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_input_usuario"
                    android:ems="12"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:text="" />

                <TextView
                    android:id="@+id/textViewCorreoPerfti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextTextApellPerfti"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="80dp"
                    android:text="Correo"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextCorrePerfti"
                    android:layout_width="320dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/textViewCorreoPerfti"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_input_usuario"
                    android:ems="12"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:text="" />


            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonactualizarPerfTI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#08FDEE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4PerfilTi" />

        <LinearLayout
            android:id="@+id/separadorPerfTi"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4PerfilTi"
            app:layout_constraintStart_toStartOf="@+id/linearLayout4PerfilTi"
            app:layout_constraintTop_toBottomOf="@+id/buttonactualizarPerfTI">

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>