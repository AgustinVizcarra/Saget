<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal"
    tools:ignore="SpeakableTextPresentCheck" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/haciaAtras"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@drawable/back_button_usuario"
                app:backgroundTint="#A9EAF1"
                android:layout_marginStart="10dp"
                app:fabCustomSize="40dp" />

            <TextView
                android:id="@+id/textoModificableEditarTi"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/yrsa"
                android:paddingTop="20dp"
                android:text="Ingresar Texto modificable"
                android:textColor="#485BC3"
                android:textSize="30sp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/nombreUsuarioTi"
                    android:layout_width="86dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Nombre:"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/NombrePersonalTI"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_input_usuario"
                    android:inputType="textPersonName"
                    android:hint="Ingrese el nombre"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/apellidosUsuarioTi"
                    android:layout_width="86dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Apellidos:"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/ApellidosPersonalTI"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_input_usuario"
                    android:inputType="textPersonName"
                    android:hint="Ingrese los Apellidos"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />
                </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/correoUsuarioTi"
                    android:layout_width="86dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="Correo:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/CorreoPersonalTI"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_input_usuario"
                    android:inputType="textPersonName"
                    android:hint="Ingrese el correo"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/passwordUsuarioTi"
                    android:layout_width="86dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="Contraseña"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/PasswordPersonalTI"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_input_usuario"
                    android:hint="Ingrese la contraseña"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/dniUsuarioTi"
                    android:layout_width="86dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/DNIUsuarioTi"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_input_usuario"
                    android:hint="Ingrese el DNI"
                    android:visibility="invisible"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="#000000" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/aplicarCambios"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#08FDEE"
            android:text="TextoVariable"
            android:layout_marginTop="70dp"
            android:layout_marginStart="130dp"
            android:textStyle="bold"
            android:textSize="14sp"
            app:cornerRadius="15dp" />
    </LinearLayout>
</ScrollView>