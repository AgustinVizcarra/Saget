<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_recojo"
    tools:context=".EditPuntoRecojoFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:context=".EditPuntoRecojoFragment">

        <TextView
            android:id="@+id/txtViewEditarPuntoRecojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/yrsa"
            android:text="Editar Punto de Recojo"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/imgBtnBackListPuntosRecojoEdit"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_button_usuario"
            app:layout_constraintBottom_toBottomOf="@+id/txtViewEditarPuntoRecojo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtViewEditarPuntoRecojo"
            app:layout_constraintVertical_bias="0.5" />
        <LinearLayout
            android:id="@+id/linearLayoutFormEditEquipo"
            android:layout_width="370dp"
            android:layout_height="600dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_scroll_punto_recojo"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/txtViewEditarPuntoRecojo"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/txtViewEditarPuntoRecojo"
            app:layout_constraintTop_toBottomOf="@+id/txtViewEditarPuntoRecojo">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textEditFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="105dp"
                    android:text="Foto:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/linearLayoutAgregarPuntoRecojo"
                    android:layout_width="245dp"
                    android:layout_height="130dp"
                    android:layout_below="@+id/textEditFoto"
                    android:layout_marginStart="59dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_device_usuario"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textEditFoto">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/sildeFotoPuntoRecojo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        app:iss_auto_cycle="true"
                        app:iss_delay="0"
                        app:iss_period="1000">

                        <ImageButton
                            android:id="@+id/imgBtnEditarFoto"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="100dp"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/round_imagebutton_usuario"
                            android:backgroundTint="#9CABC2"
                            android:src="@drawable/ic_camera"></ImageButton>
                    </com.denzcoskun.imageslider.ImageSlider>

                </LinearLayout>

                <TextView
                    android:id="@+id/textCoordenadas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayoutAgregarPuntoRecojo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="180dp"
                    android:text="Coordenadas:"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/ediTextCambiarCoordenadas"
                    android:layout_width="300dp"
                    android:layout_height="39dp"
                    android:layout_below="@+id/textCoordenadas"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_input_punto_recojo"
                    android:backgroundTint="@color/grey_font"
                    android:ems="12"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <fragment
                    android:id="@+id/mapEditarPunto"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="350dp"
                    android:layout_height="145dp"
                    android:layout_below="@+id/ediTextCambiarCoordenadas"
                    map:cameraZoom="10"
                    map:uiRotateGestures="true"
                    map:uiZoomControls="true"
                    />

                <TextView
                    android:id="@+id/textViewDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mapEditarPunto"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="105dp"
                    android:text="DescripciÃ³n:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextCambiarDescripcion"
                    android:layout_width="300dp"
                    android:layout_height="82dp"
                    android:layout_below="@+id/textViewDescripcion"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_input_punto_recojo"
                    android:backgroundTint="@color/grey_font"
                    android:ems="12"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnEditarPuntoRecojo"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextCambiarDescripcion"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="#037EF8"
                    android:text="Editar" />


            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/separadorEditForm"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/linearLayoutFormEditEquipo"
            app:layout_constraintEnd_toEndOf="@+id/linearLayoutFormEditEquipo"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutFormEditEquipo">
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>