<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_inicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewSAGET"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icono_saget" />
            <TextView
                android:id="@+id/textViewCorreoLogueo"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="24dp"
                android:text="Usuario"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent" />
            <EditText
                android:id="@+id/editTextCorreoLogueo"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/custom_input1"
                android:drawableEnd="@drawable/ic_profilelogin"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/textViewPasswordLogueo"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:text="Contraseña"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent" />
            <EditText
                android:id="@+id/editTextPasswordLogueo"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/custom_input1"
                android:drawableEnd="@drawable/ic_eye_password"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/botonIngresarLogueo"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginLeft="139dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#005A8D"
                android:onClick="btnIngresar"
                android:text="Ingresar"
                android:textSize="13dp"
                app:cornerRadius="20dp"
                app:layout_constraintVertical_bias="0.972" />
            <TextView
                android:id="@+id/clickOlvidoContrasenia"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:text="@string/olvido_password"
                android:textSize="14sp"
                android:textColor="@color/olvi_password"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>