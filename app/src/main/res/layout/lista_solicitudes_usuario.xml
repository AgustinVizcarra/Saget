<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="410dp"
    android:layout_height="90dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="35dp"
    android:gravity="center"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center"
        android:background="@drawable/fondo_solicitud"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/namesolicitud"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginTop="9dp"
                android:text="Solicitud # "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <View
                android:id="@+id/linea"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_toEndOf="@+id/namesolicitud"
                android:background="#000000" />

            <LinearLayout
                android:id="@+id/linerLayout"
                android:layout_width="75dp"
                android:layout_height="43dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/linea"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namesolicitud2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="9dp"
                    android:text="Estado: "
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linerLayout3"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/linerLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namesolicitud3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="9dp"
                    android:text=""
                    android:textColor="#24FF00"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>